<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Suryansh Translator</title>

    <link rel="stylesheet" href="/styles.css" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <h3 class="text-black text-center bold mt-3">Translator</h3>
    {{{body}}}
    <div class="typing">
      <form action="login" method="GET" class="d-flex" style="width:60rem">

        <input
          type="text"
          id="text"
          name="text"
          class="p-2 form-control me-3"
          placeholder="Text"
        /><br />

        <select id="source" name="s" class="p-2 form-control me-3">
          <option value="en">-From-</option>
          <option value="en">English</option>
          <option value="hi">Hindi</option>
          <option value="fr">French</option>
          <option value="es">Spanish</option>
          <option value="de">German</option>
        </select><br />

        <select id="target" name="t" class="p-2 form-control me-3">
          <option value="hi">-To-</option>
          <option value="hi">Hindi</option>
          <option value="en">English</option>
          <option value="fr">French</option>
          <option value="es">Spanish</option>
          <option value="de">German</option>
        </select><br />

        <button type="submit" class="btn btn-primary">Translate</button>
      </form>
    </div>

  </body>
</html>